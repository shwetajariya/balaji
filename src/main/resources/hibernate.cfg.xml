<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">root</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/balaji</property>

		<property name="connection.pool_size">1</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
		<property name="show_sql">true</property>
		<property name="hibernate.current_session_context_class">thread</property>
		<!--property name="hibernate.hbm2ddl.auto">update</property -->

		<!-- Database Mappings -->
		<mapping resource="Company.hbm.xml" />
		<mapping resource="ContactAudit.hbm.xml" />
		<mapping resource="ContactGroupMapping.hbm.xml" />
		<mapping resource="Contact.hbm.xml" />
		<mapping resource="Department.hbm.xml" />
		<mapping resource="Designation.hbm.xml" />
		<mapping resource="Employee.hbm.xml" />
		<mapping resource="Groups.hbm.xml" />
		<mapping resource="MessageLog.hbm.xml" />
		<mapping resource="MessageStatus.hbm.xml" />
		<mapping resource="MessageTemplate.hbm.xml" />
		<mapping resource="Section.hbm.xml" />
		<mapping resource="User.hbm.xml" />

	</session-factory>
</hibernate-configuration>